<?xml version="1.0" encoding="utf-8"?>
<!--
Debug-only manifest overlay.

- Enables cleartextTraffic for debug builds.
- Uses the debug network_security_config to allow HTTP (e.g. over Tailscale) for development.
- Release builds remain strict via app/src/main/AndroidManifest.xml and main network_security_config.
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config" />

</manifest>
